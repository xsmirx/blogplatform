{
  "openapi": "3.0.1",
  "info": {
    "title": "h02 API - V1",
    "description": "CRUD operations for Blog and Post.\n\nBasic-authorization with login\\password admin\\qwerty",
    "version": "h02"
  },
  "paths": {
    "/ht_02/api/blogs": {
      "get": {
        "tags": ["Blogs"],
        "summary": "Returns all blogs",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/h02.db.BlogViewModel"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/h02.db.BlogViewModel"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/h02.db.BlogViewModel"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Blogs"],
        "summary": "Create new blog",
        "requestBody": {
          "description": "Data for constructing new Blog entity",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/h02.db.BlogInputModel" }
            },
            "text/json": {
              "schema": { "$ref": "#/components/schemas/h02.db.BlogInputModel" }
            },
            "application/*+json": {
              "schema": { "$ref": "#/components/schemas/h02.db.BlogInputModel" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Returns the newly created blog",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/h02.db.BlogViewModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/h02.db.BlogViewModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/h02.db.BlogViewModel"
                }
              }
            }
          },
          "400": {
            "description": "If the inputModel has incorrect values",
            "content": {
              "text/plain": {
                "schema": { "$ref": "#/components/schemas/APIErrorResult" }
              },
              "application/json": {
                "schema": { "$ref": "#/components/schemas/APIErrorResult" }
              },
              "text/json": {
                "schema": { "$ref": "#/components/schemas/APIErrorResult" }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        },
        "security": [
          { "basic": ["Policy:", "Roles:", "AuthenticationSchemes:basic"] }
        ]
      }
    },
    "/ht_02/api/blogs/{id}": {
      "get": {
        "tags": ["Blogs"],
        "summary": "Returns blog by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Existing blog id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/h02.db.BlogViewModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/h02.db.BlogViewModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/h02.db.BlogViewModel"
                }
              }
            }
          },
          "404": { "description": "Not Found" }
        }
      },
      "put": {
        "tags": ["Blogs"],
        "summary": "Update existing Blog by id with InputModel",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "description": "Data for updating",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/h02.db.BlogInputModel" }
            },
            "text/json": {
              "schema": { "$ref": "#/components/schemas/h02.db.BlogInputModel" }
            },
            "application/*+json": {
              "schema": { "$ref": "#/components/schemas/h02.db.BlogInputModel" }
            }
          }
        },
        "responses": {
          "204": { "description": "No Content" },
          "400": {
            "description": "If the inputModel has incorrect values",
            "content": {
              "text/plain": {
                "schema": { "$ref": "#/components/schemas/APIErrorResult" }
              },
              "application/json": {
                "schema": { "$ref": "#/components/schemas/APIErrorResult" }
              },
              "text/json": {
                "schema": { "$ref": "#/components/schemas/APIErrorResult" }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not Found" }
        },
        "security": [
          { "basic": ["Policy:", "Roles:", "AuthenticationSchemes:basic"] }
        ]
      },
      "delete": {
        "tags": ["Blogs"],
        "summary": "Delete blog specified by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Blog id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not Found" }
        },
        "security": [
          { "basic": ["Policy:", "Roles:", "AuthenticationSchemes:basic"] }
        ]
      }
    },
    "/ht_02/api/posts": {
      "get": {
        "tags": ["Posts"],
        "summary": "Returns all posts",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/h02.db.PostViewModel"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/h02.db.PostViewModel"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/h02.db.PostViewModel"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Posts"],
        "summary": "Create new post",
        "requestBody": {
          "description": "Data for constructing new post entity",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/h02.db.PostInputModel" }
            },
            "text/json": {
              "schema": { "$ref": "#/components/schemas/h02.db.PostInputModel" }
            },
            "application/*+json": {
              "schema": { "$ref": "#/components/schemas/h02.db.PostInputModel" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Returns the newly created post",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/h02.db.PostViewModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/h02.db.PostViewModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/h02.db.PostViewModel"
                }
              }
            }
          },
          "400": {
            "description": "If the inputModel has incorrect values",
            "content": {
              "text/plain": {
                "schema": { "$ref": "#/components/schemas/APIErrorResult" }
              },
              "application/json": {
                "schema": { "$ref": "#/components/schemas/APIErrorResult" }
              },
              "text/json": {
                "schema": { "$ref": "#/components/schemas/APIErrorResult" }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        },
        "security": [
          { "basic": ["Policy:", "Roles:", "AuthenticationSchemes:basic"] }
        ]
      }
    },
    "/ht_02/api/posts/{id}": {
      "get": {
        "tags": ["Posts"],
        "summary": "Return post by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of existing post",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/h02.db.PostViewModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/h02.db.PostViewModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/h02.db.PostViewModel"
                }
              }
            }
          },
          "404": { "description": "Not Found" }
        }
      },
      "put": {
        "tags": ["Posts"],
        "summary": "Update existing post by id with InputModel",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "description": "Data for updating",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/h02.db.PostInputModel" }
            },
            "text/json": {
              "schema": { "$ref": "#/components/schemas/h02.db.PostInputModel" }
            },
            "application/*+json": {
              "schema": { "$ref": "#/components/schemas/h02.db.PostInputModel" }
            }
          }
        },
        "responses": {
          "204": { "description": "No Content" },
          "400": {
            "description": "If the inputModel has incorrect values",
            "content": {
              "text/plain": {
                "schema": { "$ref": "#/components/schemas/APIErrorResult" }
              },
              "application/json": {
                "schema": { "$ref": "#/components/schemas/APIErrorResult" }
              },
              "text/json": {
                "schema": { "$ref": "#/components/schemas/APIErrorResult" }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not Found" }
        },
        "security": [
          { "basic": ["Policy:", "Roles:", "AuthenticationSchemes:basic"] }
        ]
      },
      "delete": {
        "tags": ["Posts"],
        "summary": "Delete post specified by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Post id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not Found" }
        },
        "security": [
          { "basic": ["Policy:", "Roles:", "AuthenticationSchemes:basic"] }
        ]
      }
    },
    "/ht_02/api/testing/all-data": {
      "delete": {
        "tags": ["Testing"],
        "summary": "Clear database: delete all data from all tables/collections",
        "responses": { "204": { "description": "All data is deleted" } }
      }
    }
  },
  "components": {
    "schemas": {
      "APIErrorResult": {
        "type": "object",
        "properties": {
          "errorsMessages": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/FieldError" },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "FieldError": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Message with error explanation for certain field",
            "nullable": true
          },
          "field": {
            "type": "string",
            "description": "What field/property of input model has error",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "h02.db.BlogInputModel": {
        "required": ["description", "name", "websiteUrl"],
        "type": "object",
        "properties": {
          "name": { "maxLength": 15, "type": "string" },
          "description": { "maxLength": 500, "type": "string" },
          "websiteUrl": {
            "maxLength": 100,
            "pattern": "^https://([a-zA-Z0-9_-]+\\.)+[a-zA-Z0-9_-]+(\\/[a-zA-Z0-9_-]+)*\\/?$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "h02.db.BlogViewModel": {
        "required": ["description", "id", "name", "websiteUrl"],
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "websiteUrl": { "type": "string" }
        },
        "additionalProperties": false
      },
      "h02.db.PostInputModel": {
        "required": ["blogId", "content", "shortDescription", "title"],
        "type": "object",
        "properties": {
          "title": { "maxLength": 30, "type": "string" },
          "shortDescription": { "maxLength": 100, "type": "string" },
          "content": { "maxLength": 1000, "type": "string" },
          "blogId": { "type": "string" }
        },
        "additionalProperties": false
      },
      "h02.db.PostViewModel": {
        "required": [
          "blogId",
          "blogName",
          "content",
          "id",
          "shortDescription",
          "title"
        ],
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "shortDescription": { "type": "string" },
          "content": { "type": "string" },
          "blogId": { "type": "string" },
          "blogName": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "bearer": {
        "type": "http",
        "description": "Enter JWT Bearer token **_only_**",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "basic": { "type": "http", "scheme": "basic" },
      "refreshToken": {
        "type": "apiKey",
        "description": "JWT refreshToken inside cookie. Must be correct, and must not expire",
        "name": "refreshToken",
        "in": "cookie"
      }
    }
  }
}
