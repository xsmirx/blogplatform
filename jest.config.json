{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.spec.json"
      }
    ]
  },
  "testMatch": ["**/src/**/*.spec.ts", "**/src/**/*.test.ts"],
  "verbose": true,
  "maxWorkers": 1,
  "maxConcurrency": 1
}
